\renewcommand*{\maketitle}{%
  \begin{titlepage} % gibt es bei vielen Klassen (siehe Anleitung der Klasse)
    \thispagestyle{empty}
    \setlength{\parindent}{0pt}

    \textbf{\@einrichtung} \\
    \textbf{\@abteilung} \\
    \textbf{\@semesterlabel\ \@semester}

    \vfill

    \begin{center}
      \textsc{\Large{\@art}}\\
      \large{im Fach \@fach}

      	\vfill

      \begin{huge}
    	\@titel\\[1em]
      \end{huge}
    \normalsize\@untertitel
    \end{center}

    	\vfill

      \ifthenelse{\equal{\@fassung}{}}{}{\setlength{\fboxrule}{2pt}\begin{center}\fbox{\Huge{\@fassung}}\\\large{v. \today}\end{center}\vfill\normalsize}

      \begin{tabular}{ll}
      	\ifthenelse{\equal{\@dozentin}{}}{}{Dozent:in: & \@dozentin}\\
      	\ifthenelse{\equal{\@mentorin}{}}{}{Mentor:  & \@mentorin\\\\}
      	Vorgelegt von:	& \@name \\
      					\ifthenelse{\equal{\@personTitel}{}}{}{ & \@personTitel \\}
      					& \@adresse \\
      					& \@email \\\\
      	%\@semesterlabel:			& \@semester \\
        \ifthenelse{\equal{\@abgabe}{}}{& \\}{Abgabe:   	& \@abgabe \\}
      	Umfang:			& \the\numexpr\ztotpages-\@litseiten-\@tocseiten-2\ Seiten \\
      \end{tabular}

    %	\begin{tabular}{lp{6cm}lp{6cm}l}
    %		Wertung der Arbeit: & \hrulefill &\\\\
    %		Wertung der Präsentation: & \hrulefill &\\\\
    %		Gesamtwertung: & \hrulefill &\\\\
    %		Unterschrift des \\Seminarleiters: & \hrulefill \\ & Claus B\,y\,s\,t\,r\,o\,n
    %	\end{tabular}

  \end{titlepage}
	\newpage
  \interfootnotelinepenalty 10000
  \setlength{\footnotesep}{1.2em}
  \renewcommand{\refname}{Literaturverzeichnis}
	\tableofcontents\MSonehalfspacing
  \clubpenalty = 10000 % Keine "Schusterjungen"
  \widowpenalty = 10000 \displaywidowpenalty = 10000 % Keine "Hurenkinder"
}

